<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.taek.commutingchecker.MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Switch
            android:id="@+id/BLEScanSwitch"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="right"
            android:text="BLE SCAN"/>

        <Button
            android:id="@+id/Request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request Data"/>

        <Button
            android:id="@+id/Show_EssentialData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show data"/>

        <Button
            android:id="@+id/Calibration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CALIBRATION"/>

        <Button
            android:id="@+id/setValueOfRssi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SET VALUE OF RSSI: -1, -1, -1"/>

        <Button
            android:id="@+id/CheckRunning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check Running"/>
    </LinearLayout>

</FrameLayout>